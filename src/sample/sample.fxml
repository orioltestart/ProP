<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane fx:id="finestra" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="800.0" prefWidth="1280.0" style="-fx-background-color: darkslategrey;"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <bottom>
        <TitledPane fx:id="barraInferior" animated="false" text="Interficie">
            <content>
                <HBox alignment="CENTER_LEFT" maxHeight="300.0" minHeight="300.0" prefHeight="300.0" spacing="5.0"
                      style="-fx-background-color: darkslategrey;">
                    <children>
                        <VBox alignment="TOP_CENTER" maxWidth="230.0" minWidth="230.0" prefWidth="230.0"
                              style="-fx-border-color: #FFFFFF; -fx-border-radius: 4px; -fx-border-width: 2px;"
                              VBox.vgrow="ALWAYS">
                            <children>
                                <Text fx:id="textCursor" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"
                                      text="Posicio Cursor" textAlignment="CENTER">
                                    <font>
                                        <Font size="17.0"/>
                                    </font>
                                </Text>
                                <VBox fx:id="barraCursor" alignment="TOP_CENTER" VBox.vgrow="ALWAYS"/>
                                <Button fx:id="passarTorn" maxHeight="50.0" maxWidth="230.0" minHeight="50.0"
                                        minWidth="230.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="230.0"
                                        text="Passar Torn"/>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER"
                              style="-fx-border-color: #FFFFFF; -fx-border-radius: 4px; -fx-border-width: 2px;"
                              HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER">
                                    <children>
                                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Informe: ">
                                            <font>
                                                <Font size="25.0"/>
                                            </font>
                                        </Text>
                                        <Label fx:id="tipusInforme" text="Moviment" textFill="WHITE">
                                            <font>
                                                <Font size="25.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER">
                                    <children>
                                        <VBox fx:id="barraOrigen" alignment="CENTER" maxWidth="200.0" minWidth="200.0"
                                              prefWidth="200.0"/>
                                        <Region HBox.hgrow="ALWAYS"/>
                                        <VBox fx:id="barraAccio" alignment="CENTER">
                                            <children>
                                                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"
                                                      text="Es desplaça a">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </Text>
                                                <ImageView pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@Imatges/direction4.png"/>
                                                    </image>
                                                </ImageView>
                                            </children>
                                        </VBox>
                                        <Region HBox.hgrow="ALWAYS"/>
                                        <VBox fx:id="barraDesti" alignment="CENTER" maxWidth="200.0" minWidth="200.0"
                                              prefWidth="200.0"/>
                                    </children>
                                </HBox>
                                <Region VBox.vgrow="ALWAYS"/>
                                <HBox alignment="CENTER">
                                    <children>
                                        <Button fx:id="ant" disable="true" mnemonicParsing="false" text="Anterior"
                                                visible="false"/>
                                        <Region HBox.hgrow="ALWAYS"/>
                                        <Button fx:id="ferMovimentAtac" maxHeight="50.0" maxWidth="230.0"
                                                minHeight="50.0" minWidth="230.0" mnemonicParsing="false"
                                                prefHeight="50.0" prefWidth="230.0" text="Realitza Moviment"/>
                                        <Region HBox.hgrow="ALWAYS"/>
                                        <Button fx:id="seg" disable="true" mnemonicParsing="false" text="Següent"
                                                visible="false"/>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                            </padding>
                        </VBox>
                        <VBox alignment="TOP_CENTER" maxWidth="230.0" minWidth="230.0" prefWidth="230.0" spacing="2.0">
                            <children>
                                <HBox alignment="CENTER" minWidth="200.0" prefWidth="200.0" spacing="50.0"
                                      style="-fx-border-color: #FFFFFF; -fx-border-radius: 4px; -fx-border-width: 2px;">
                                    <children>
                                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Mode">
                                            <fill>
                                                <LinearGradient endX="1.0" endY="1.0">
                                                    <stops>
                                                        <Stop color="WHITE"/>
                                                        <Stop color="WHITE" offset="1.0"/>
                                                    </stops>
                                                </LinearGradient>
                                            </fill>
                                        </Text>
                                        <Region HBox.hgrow="ALWAYS"/>
                                        <Button fx:id="btAtacMoure" maxWidth="70.0" minWidth="70.0"
                                                mnemonicParsing="false" prefWidth="70.0" text="Moure"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                                    </padding>
                                </HBox>
                                <VBox alignment="TOP_CENTER" maxHeight="220.0" minHeight="220.0" prefHeight="220.0"
                                      style="-fx-border-color: #FFFFFF; -fx-border-radius: 4px; -fx-border-width: 2px;">
                                    <children>
                                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"
                                              text="Posicio Seleccionada" textAlignment="CENTER">
                                            <font>
                                                <Font size="17.0"/>
                                            </font>
                                        </Text>
                                        <VBox fx:id="posicioActual" alignment="TOP_CENTER" VBox.vgrow="ALWAYS"/>
                                    </children>
                                </VBox>
                                <Region VBox.vgrow="ALWAYS"/>
                                <HBox alignment="CENTER">
                                    <children>
                                        <Button fx:id="btSortir" maxHeight="50.0" maxWidth="230.0" minHeight="50.0"
                                                minWidth="230.0" mnemonicParsing="false" prefHeight="50.0"
                                                prefWidth="230.0" text="Sortir"/>
                                    </children>
                                </HBox>
                            </children>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                    </padding>
                </HBox>
            </content>
        </TitledPane>
    </bottom>
    <center>
        <ScrollPane fx:id="contenidorMapa" BorderPane.alignment="CENTER">
            <content>
                <StackPane fx:id="pilaMapa">
                    <children>
                        <GridPane fx:id="m"/>
                    </children>
                </StackPane>
            </content>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </ScrollPane>
    </center>
</BorderPane>
